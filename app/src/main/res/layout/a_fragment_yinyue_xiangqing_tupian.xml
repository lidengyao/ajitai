<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/PageRootLL">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/a_yinyue_xiangqing_tupian" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="《我的家园》"
            android:textColor="@color/C242424"
            android:textSize="@dimen/textsize16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="恩科赛汗 蒙克赛汗"
            android:textColor="@color/CA8A8A8"
            android:textSize="@dimen/textsize12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/DangQianShiJian_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:includeFontPadding="false"
                android:text="00:01"
                android:textColor="@color/CA8A8A8"
                android:textSize="@dimen/textsize12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/ZongShiJian_TV"
                android:layout_toRightOf="@+id/DangQianShiJian_TV"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/a_bofangjindu_dian" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#30A8A8A8"></View>
            </LinearLayout>

            <TextView
                android:id="@+id/ZongShiJian_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:includeFontPadding="false"
                android:text="50:11"
                android:textColor="@color/CA8A8A8"
                android:textSize="@dimen/textsize12" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>