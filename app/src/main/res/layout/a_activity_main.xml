<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hxsoft.ajitai.widget.ScrollViewPager
        android:id="@+id/ContentSP"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ShouYeBottomLL" />
    <!--底部-->
    <LinearLayout
        android:id="@+id/ShouYeBottomLL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color2"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/line"
            android:background="@color/pagebgcolor"></View>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/FaXianLL"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/FaXianIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/faxian1" />

                <TextView
                    android:id="@+id/FaXianTV"
                    style="@style/HomeBottomTextStyle"
                    android:text="发现" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/GanWuLL"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/GanWuIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ganwu2" />

                <TextView
                    android:id="@+id/GanWuTV"
                    style="@style/HomeBottomTextStyle"
                    android:text="感悟" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/WoDeLL"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/WoDeIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/wode2" />

                <TextView
                    android:id="@+id/WoDeTV"
                    style="@style/HomeBottomTextStyle"
                    android:text="我的" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>