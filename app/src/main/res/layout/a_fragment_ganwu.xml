<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/PageRootLL">


    <RelativeLayout
        android:id="@+id/ShouYeTopRL"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@color/color2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp">


            <LinearLayout
                android:id="@+id/SouSuoLL"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="18dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/a_ganwuchaxun" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="感悟驿站"
                    android:textColor="@color/C242424"
                    android:textSize="@dimen/textsize16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/HaoYouLL"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="18dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/a_ganwutouxiang" />
            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>

    <View style="@style/LineStyle"></View>

    <RelativeLayout
        android:id="@+id/FaBuGanWu_RL"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/a_fabuganwuicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="发布感悟"
                android:textColor="@color/C242424"
                android:textSize="@dimen/textsize15" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/a_next" />
    </RelativeLayout>

    <View
        style="@style/LineStyle"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/GanwuOneLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/a_item_ganwu"></include>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/GanwuTwoLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/a_item_ganwu"></include>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>