<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@drawable/ldy_cornersitemclickstyle"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/contentRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/color1" />

            <View
                style="@style/LineStyle"
                android:layout_marginTop="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="visible"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/GongNeng_Menu_TV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="功能说明"
                    android:textColor="@color/color21" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/color24"></View>

                <TextView
                    android:id="@+id/Log_Menu_TV"
                    android:layout_width="0dp"
                    android:textColor="@color/color1"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="网络请求日志" />
            </LinearLayout>

            <View style="@style/LineStyle"></View>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/GongNengContentET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:background="@color/color2"
                        android:gravity="top"
                        android:padding="10dp"
                        android:text="ddd"
                        android:textColorHighlight="#CCCCCC"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/textsize12" />

                    <TextView
                        android:id="@+id/LogContentTV"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:background="@color/color2"
                        android:gravity="top"
                        android:padding="10dp"
                        android:text="ddd"
                        android:textColorHighlight="#CCCCCC"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/textsize12" />
                </LinearLayout>
            </ScrollView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/CloseLL"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/guanbi" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
