<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatarIV"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:src="@mipmap/a_ganwu_item_headimg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:orientation="vertical">

                <!--头部-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nicknameTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/C242424"
                            android:textSize="@dimen/textsize14" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/createTimeTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/CA8A8A8"
                                android:textSize="@dimen/textsize10" />

                            <TextView
                                android:id="@+id/positionTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text=""
                                android:textColor="@color/CA8A8A8"
                                android:textSize="@dimen/textsize10" />


                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/OperateIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="20dp"
                        android:src="@mipmap/a_ganwu_item_xiajiantou" />
                </RelativeLayout>

                <!--内容-->
                <TextView
                    android:id="@+id/contentTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="5dp"
                    android:text=""
                    android:textColor="#4C4C4C"
                    android:textSize="@dimen/textsize14" />

                <com.hxsoft.ajitai.utils.AutoLinefeedLayout
                    android:id="@+id/PicAutoLinefeedLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="5dp">

                </com.hxsoft.ajitai.utils.AutoLinefeedLayout>


                <!--转发分享等-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ZhuanFa_LL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/a_ganwu_zhuanfa" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:text="转发"
                            android:textColor="#808080"
                            android:textSize="@dimen/textsize11" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/FenXiang_LL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/a_ganwu_fenxiang" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:text="分享"
                            android:textColor="#808080"
                            android:textSize="@dimen/textsize11" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/PingLunLL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/a_ganwu_pinglun" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:text="评论"
                            android:textColor="#808080"
                            android:textSize="@dimen/textsize11" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/DianZanLL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:id="@+id/DianZanIV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/a_ganwu_dianzan" />

                        <TextView
                            android:id="@+id/DianZanNumTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:text="点攒"
                            android:textColor="#808080"
                            android:textSize="@dimen/textsize11" />
                    </LinearLayout>

                </LinearLayout>

                <!--评论-->
                <LinearLayout
                    android:id="@+id/JiaoHuLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:background="@mipmap/a_liaotian_bg"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/thumbsLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical|top"
                            android:orientation="horizontal"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:src="@mipmap/a_ganwu_yidianzan" />


                            <com.hxsoft.ajitai.utils.AutoLinefeedLayout
                                android:id="@+id/thumbsAutoLinefeedLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp">

                            </com.hxsoft.ajitai.utils.AutoLinefeedLayout>

                        </LinearLayout>

                        <View
                            style="@style/LineStyle"
                            android:background="#E0E0E0"></View>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/commentsLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">


                    </LinearLayout>
                </LinearLayout>

                <View
                    style="@style/LineStyle"
                    android:layout_marginTop="23dp"></View>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>