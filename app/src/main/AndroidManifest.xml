        <receiver android:name="com.hxsoft.ajitai.jpush.MyJPushMessageReceiver">
            <intent-filter>
                <action android:name="cn.jpush.android.intent.RECEIVE_MESSAGE" />

                <category android:name="com.qjrj.yck" />
            </intent-filter>
        </receiver>
